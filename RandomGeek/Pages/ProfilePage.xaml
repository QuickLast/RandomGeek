                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>

                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>

                <TextBlock TextAlignment="Center"
                           Grid.Row="2"
                           Grid.Column="5"
                           Grid.ColumnSpan="9"
                           Grid.RowSpan="2"
                           Text="Имя пользователя"
                           FontSize="50"
                           FontWeight="Black"
                           Foreground="#FB323A68"/>

                <StackPanel Grid.Column="2"
                            Grid.ColumnSpan="14"
                            Grid.Row="3"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Orientation="Horizontal"
                            Margin="10 0 0 0">

                </StackPanel>

                <Ellipse Width="200" Height="200" Grid.Column="1" Grid.Row="1">
                    <Ellipse.Fill>
                        <ImageBrush ImageSource="/Assets/Images/MainPageBanner.png" Stretch="UniformToFill"/>
                    </Ellipse.Fill>
                </Ellipse>

                <Border CornerRadius="20" BorderBrush="Black" BorderThickness="1" Grid.Column="1" Grid.ColumnSpan="4" Grid.Row="6">
                    <Button Style="{StaticResource ButtonStyleAuth}" x:Name="ChoosePhotoBtn"
                            Foreground="#FB323A68"
                            FontSize="25"
                            Content="Выбрать фото"
                            Background="Transparent"
                            BorderThickness="0"/>
                </Border>

                <StackPanel Grid.Column="1" Grid.ColumnSpan="10" Grid.Row="9" Orientation="Horizontal">
                    <TextBlock x:Name="WatchedMovieBtn"
                            Foreground="#FB323A68"
                            FontSize="40"
                            FontWeight="Bold"
                            Background="Transparent"
                            >Просмотренное кино</TextBlock>

                </StackPanel>

                <StackPanel Grid.Row="11" Grid.Column="1" Grid.RowSpan="11" Grid.ColumnSpan="23">

                    <StackPanel HorizontalAlignment="Center" Orientation="Horizontal" VerticalAlignment="Center" Margin="0 25 0 0">
                        <StackPanel Margin="0 0 40 0">
                            <Image Width="170" Height="170" Source="/Assets/Images/Games.png"></Image>
                            <TextBlock Margin="0 10 0 0" Foreground="#FB323A68" FontSize="25">CompilationName</TextBlock>
                        </StackPanel>
                        <StackPanel Margin="0 0 40 0">
                            <Image Width="170" Height="170" Source="/Assets/Images/Games.png"></Image>
                            <TextBlock Margin="0 10 0 0" Foreground="#FB323A68" FontSize="25">CompilationName</TextBlock>
                        </StackPanel>
                        <StackPanel Margin="0 0 40 0">
                            <Image Width="170" Height="170" Source="/Assets/Images/Games.png"></Image>
                            <TextBlock Margin="0 10 0 0" Foreground="#FB323A68" FontSize="25">CompilationName</TextBlock>
                        </StackPanel>
                        <StackPanel Margin="0 0 40 0">
                            <Image Width="170" Height="170" Source="/Assets/Images/Games.png"></Image>
                            <TextBlock Margin="0 10 0 0" Foreground="#FB323A68" FontSize="25">CompilationName</TextBlock>
                        </StackPanel>
                        <StackPanel Margin="0 0 40 0">
                            <Image Width="170" Height="170" Source="/Assets/Images/Games.png"></Image>
                            <TextBlock Margin="0 10 0 0" Foreground="#FB323A68" FontSize="25">CompilationName</TextBlock>
                        </StackPanel>
                    </StackPanel>

                    <StackPanel HorizontalAlignment="Center" Orientation="Horizontal" VerticalAlignment="Center" Margin="0 25 480 0">
                        <StackPanel Margin="0 0 40 0">
                            <Image Width="170" Height="170" Source="/Assets/Images/Games.png"></Image>
                            <TextBlock Margin="0 10 0 0" Foreground="#FB323A68" FontSize="25">CompilationName</TextBlock>
                        </StackPanel>
                        <StackPanel Margin="0 0 40 0">
                            <Image Width="170" Height="170" Source="/Assets/Images/Games.png"></Image>
                            <TextBlock Margin="0 10 0 0" Foreground="#FB323A68" FontSize="25">CompilationName</TextBlock>
                        </StackPanel>
                        <StackPanel Margin="0 0 40 0">
                            <Image Width="170" Height="170" Source="/Assets/Images/Games.png"></Image>
                            <TextBlock Margin="0 10 0 0" Foreground="#FB323A68" FontSize="25">CompilationName</TextBlock>
                        </StackPanel>
                    </StackPanel>

                </StackPanel>
            </Grid>
        </StackPanel>
    </Grid>
</Page>